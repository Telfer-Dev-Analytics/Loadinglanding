<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BTA Photo Carousel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script defer src="https://unpkg.com/lucide@latest"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/framer-motion/10.12.6/framer-motion.umd.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/heic2any/0.0.2/heic2any.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Press Start 2P', cursive;
        }
        .screen-frame {
            width: 700px;
            height: 400px;
            background: black;
            border: 1px solid gray;
            border-radius: 15px;
            position: relative;
            overflow: hidden;
            box-shadow: 0 0 0px rgba(255, 255, 255, 0.3);
        }
        .carousel-image {
            position: absolute;
            width: 100%;
            height: 100%;
            object-fit: contain;
            background-color: black;
            transition: opacity 1s ease-in-out;
        }
    </style>
</head>
<body class="flex flex-col items-center justify-center h-screen bg-gray-900 text-white p-6">
    <h1 class="text-4xl font-bold mb-6 text-center">This is <span class="text-purple-500">BTA</span></h1>
    
    <div class="screen-frame">
        <img id="carousel-image" class="carousel-image" src="" alt="BTA Event" />
    </div>
    
    <div class="mt-6 text-lg">BTA Event Highlights</div>

    <script>
        const images = [
    "/images/events/fun/IMG_0243.JPG", 
    "/images/events/fun/IMG_0245.JPG", 
    "/images/events/fun/IMG_0246.JPG", 
    "/images/events/fun/IMG_0247.JPG", 
    "/images/events/fun/IMG_0969.JPG", 
    "/images/events/fun/IMG_1002.JPG", 
    "/images/events/fun/IMG_1009.JPG", 
    "/images/events/fun/IMG_1010.JPG", 
    "/images/events/fun/IMG_1011.JPG", 
    "/images/events/fun/IMG_3320.JPG", 
    "/images/events/fun/IMG_3324.JPG", 
    "/images/events/fun/IMG_3331.JPG", 
    "/images/events/fun/IMG_3332.JPG", 
    "/images/events/fun/IMG_3337.JPG", 
    "/images/events/fun/IMG_3339.JPG", 
    "/images/events/fun/IMG_3340.JPG", 
    "/images/events/fun/IMG_3342.JPG", 
    "/images/events/fun/IMG_3343.JPG", 
    "/images/events/fun/IMG_3345.JPG", 
    "/images/events/fun/IMG_3346.JPG", 
    "/images/events/fun/IMG_5943.JPG", 
    "/images/events/fun/IMG_5944.JPG", 
    "/images/events/fun/IMG_5947.JPG", 
    "/images/events/fun/IMG_5949.JPG", 
    "/images/events/fun/IMG_5951.JPG"
].sort(() => Math.random() - 0.5);
        
        let index = 0;

        function updateCarousel() {
            const imgElement = document.getElementById("carousel-image");
            let imgSrc = images[index];
            index = (index + 1) % images.length;
            
            if (imgSrc.endsWith(".HEIC")) {
                fetch(imgSrc)
                    .then(response => response.blob())
                    .then(blob => heic2any({ blob, toType: "image/jpeg" }))
                    .then(conversion => {
                        let convertedURL = URL.createObjectURL(conversion);
                        imgElement.style.opacity = 0;
                        setTimeout(() => {
                            imgElement.src = convertedURL;
                            imgElement.style.opacity = 1;
                        }, 500);
                    })
                    .catch(error => console.error("Error converting HEIC:", error));
            } else {
                imgElement.style.opacity = 0;
                setTimeout(() => {
                    imgElement.src = imgSrc;
                    imgElement.style.opacity = 1;
                }, 500);
            }
        }
        
        setInterval(updateCarousel, 3000);
        updateCarousel();
    </script>
</body>
</html>
